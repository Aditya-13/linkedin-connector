        <div class="overflow-hidden">
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('walmart')">walmart</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('amazon')">amazon</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('Apple')">Apple</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('google')">google</span>
        </div>
        <div class="overflow-hidden mt-6">
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('cvs-health')">cvs-health</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('unitedhealth-group')">unitedhealth-group</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('exxonmobil')">exxonmobil</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('berkshire-hathaway')">berkshire-hathaway</span>
        </div>
        <div class="overflow-hidden mt-6">
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('bank-of-america')">bank-of-america</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('costco-wholesale')">costco-wholesale</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('cignahealthcare')">cignahealthcare</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('att')">att</span>
        </div>
        <div class="overflow-hidden mt-6">
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('amerisourcebergen')">amerisourcebergen</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('microsoft')">microsoft</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('cardinal-health')">cardinal-health</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('chevron')">chevron</span>
        </div>
        <div class="overflow-hidden mt-6">
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('verizon')">verizon</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('mckesson')">mckesson</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('jpmorganchase')">jpmorganchase</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('general-motors')">general-motors</span>
        </div>
        <div class="overflow-hidden mt-6">
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('johnson-&-johnson')">johnson-&-johnson</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('delltechnologies')">delltechnologies</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('meta')">meta</span>
          <span class="cursor-pointer pr-4 font-bold" onclick="fillInput('fedex')">fedex</span>
        </div>
    </div>
    <div class="bg-white rounded-lg shadow-lg p-8 mx-auto lg:w-1/1 mt-8">
      <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">LinkedIn Connector</h1>
        <form id="form" action="/submit" method="POST">
          <div class="input-field mb-6">
            <label for="email" class="block text-gray-800 font-bold mb-2">Email*</label>
            <input required type="email" name="email" id="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-800 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div class="input-field mb-6">
            <label for="password" class="block text-gray-800 font-bold mb-2">Password*</label>
            <input required type="password" name="password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-800 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div class="input-field mb-6">
            <label for="company" class="block text-gray-800 font-bold mb-2">Company*</label>
            <input required type="text" name="company" id="company" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-800 leading-tight focus:outline-none focus:shadow-outline">
          </div>
          <div class="input-field lg:hidden mb-6">
            <label for="company" class="block text-gray-800 font-bold mb-2">Top Companies</label>
            <select required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-800 leading-tight focus:outline-none focus:shadow-outline">
              <% companies.forEach(function(company) { %>
                <option value="<%= company %>" onclick="fillInput('<%= company %>')"><%= company %></option>
              <% }); %>
            </select>
          </div>          
          <div class="input-field mb-8">
            <label for="page" class="block text-gray-800 font-bold mb-2">Seacrh Upto Page Number (1-10)<br/>(The Smaller The Faster)*</label>
            <input required type="number" name="page" id="page" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-800 leading-tight focus:outline-none focus:shadow outline" min="1" max="10" oninput="this.value = this.value.replace(/[^0-9]/g, '')">
          </div>
          <button type="submit" id="login-btn" class="login-btn text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Start Connect</button>
          <div id="loader" class="loader"></div>
        </form>
    </div>
    <div class="bg-white hidden lg:inline-block rounded-lg shadow-lg p-8 mx-auto mt-10 lg:w-1/4">
      <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">Top Company Names</h1>
      <div class="overflow-hidden">
        <span class="cursor-pointer font-bold pr-4" onclick="fillInput('pfizer')">pfizer</span>
