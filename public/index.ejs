        <span class="cursor-pointer font-bold pr-4" onclick="fillInput('ebay')">ebay</span>
      </div>
  </div>
  </div>
  <hr>
  <footer class="bg-transparent text-center py-4">
    <p class="text-white text-sm">
      We don't collect any data. This is an automated process. You can check and contribute to the code
      <a href="https://github.com/Aditya-13/conactivity" class="text-yellow-500 hover:underline">HERE</a>.
    </p>
  </footer>
  
  <script>
    const form = document.getElementById('form');
    const loginBtn = document.getElementById('login-btn');
    const loader = document.getElementById('loader');

    form.addEventListener('submit', (event) => {
      event.preventDefault();
      loader.style.display = 'block';
      loginBtn.disabled = true;
      setTimeout(() => {
        form.submit();
      }, 2000);
    });
    function fillInput(value) {
      document.getElementById("company").value = value;
    }
  </script>
</body>
</html>


